#!/bin/bash -v

UPDATE="$HOME/dotfiles/utils/_update"

. "$UPDATE/macos"
. "$UPDATE/brew"
. "$UPDATE/npm"
# . "$UPDATE/cabal"
. "$UPDATE/ruby"

read -rp "Repair now? (y/n) " -n 1 && [[ $REPLY =~ ^[Yy]$ ]] && . repair
read -rp "Clean now? (y/n) " -n 1 && [[ $REPLY =~ ^[Yy]$ ]] && . clean
echo "Sytem updated."
