#!/bin/bash -v

UPDATE="${BASH_SOURCE%/_update}"

. "$UPDATE/macos"
. "$UPDATE/brew"
. "$UPDATE/npm"
# . "$UPDATE/cabal"
. "$UPDATE/rvm"
. "$UPDATE/ruby"
. "$UPDATE/zsh"

# repair
sudo /usr/libexec/repair_packages --repair --standard-pkgs --volume /
sudo chmod -R 777 /tmp

## clean
read -rp "System Updated. Clean now? (y/n) " -n 1 && [[ $REPLY =~ ^[Yy]$ ]] && . clean
