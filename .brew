#!/bin/bash

# Make sure we’re using the latest Homebrew
brew update

# Upgrade any already-installed formulae
brew upgrade

# Install GNU core utilities (those that come with OS X are outdated)
brew install coreutils
echo "Don’t forget to add $(brew --prefix coreutils)/libexec/gnubin to \$PATH."

# Install GNU `find`, `locate`, `updatedb`, and `xargs`, g-prefixed
brew install findutils

# Install Bash 4 and link
brew install bash
sudo rm /bin/bash
sudo ln -s /usr/local/bin/bash /bin/bash

# Install zsh and utils
brew install zsh
curl -L http://install.ohmyz.sh | sh

# Install wget with IRI support
brew install wget --enable-iri

# Install more recent versions of some OS X tools
brew tap homebrew/dupes
brew install homebrew/dupes/grep
brew tap josegonzalez/homebrew-php

# Python and Pip
brew install python
pip install -U pip
pip install Pygments

# https://github.com/isaacs/nave
# needs npm, obviously.
# TODO: I think i'd rather curl down the nave.sh, symlink it into /bin and use that for initial node install.


# node and npm
brew install node
sudo brew postinstall node
npm install -g nave

# gcc/g++ compilers
brew install gcc
brew link gcc

# Databases
brew install redis
brew install mongodb
wget -P ~/Downloads https://github.com/jimbojsb/launchrocket/releases/download/v0.6/LaunchRocket.prefPane.zip
echo "Don’t forget go to 'Downloads' folder and install LaunchRocket"

# Caskfile manager
brew tap phinze/cask
brew install brew-cask
brew cask install qlcolorcode qlstephen qlmarkdown quicklook-json qlprettypatch quicklook-csv betterzipql webp-quicklook suspicious-package

# Install everything else
brew install imagemagick
brew install graphicsmagick
brew install ctags
brew install ack
brew install git
brew install rename
brew install tree
brew install gist
brew install youtube-dl
brew install speedtest_cli
brew install ffmpeg

# Install linters dependencies
sudo npm install -g coffee-script coffeelint jshint js2coffee mocha
sudo npm install -g less stylus csslint csscomb
sudo npm install -g bower gulp grunt-cli yo yosay
sudo npm install -g vtop fixpack node-inspector nodemon npm-check-updates semver-date
sudo pip install cpplint
brew install cppcheck cabal-install shellcheck
sudo gem install rubocop scss-lint hub

# Remove outdated versions from the cellar
brew cleanup
