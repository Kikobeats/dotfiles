#!/bin/bash

# Make sure we’re using the latest Homebrew
brew update

# Upgrade any already-installed formulae
brew upgrade

# Install GNU core utilities (those that come with OS X are outdated)
brew install coreutils
echo "Don’t forget to add $(brew --prefix coreutils)/libexec/gnubin to \$PATH."

# Install GNU `find`, `locate`, `updatedb`, and `xargs`, g-prefixed
brew install findutils

# Install Bash 4 and link
brew install bash
sudo rm /bin/bash
sudo ln -s /usr/local/bin/bash /bin/bash

# Install zsh and utils
brew install zsh
curl -L http://install.ohmyz.sh | sh

# Install wget with IRI support
brew install wget --with-iri

# Install more recent versions of some OS X tools
brew tap homebrew/dupes
brew install homebrew/dupes/grep
brew tap josegonzalez/homebrew-php

# Python and Pip
brew install python
pip install -U pip
pip install Pygments

# node and npm
brew install node
sudo brew postinstall node
npm install -g nave

# gcc/g++ compilers
brew install gcc
brew link gcc

# Databases
brew install redis
brew install mongodb
wget -P ~/Downloads https://github.com/jimbojsb/launchrocket/releases/download/v0.7/LaunchRocket.prefPane.zip
echo "Don’t forget go to 'Downloads' folder and install LaunchRocket"

# Install everything else
brew install imagemagick
brew install graphicsmagick
brew install ctags
brew install ack
brew install git
brew install rename
brew install tree
brew install gist
brew install youtube-dl
brew install ffmpeg

# Install linters dependencies
npm install -g coffee-script coffeelint jshint jscs js2coffee mocha less stylus csslint csscomb bower gulp grunt-cli yo yosay
npm install -g finepack node-inspector getversion nodemon npm-check-updates semver-date vtop npm trash empty-trash speed-test fuck-you
brew install cppcheck cabal-install shellcheck httpie
sudo gem install rubocop scss-lint hub
sudo pip install cpplint

# Remove outdated versions from the cellar
brew cleanup
